@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Kilimoni High</h1>

    <hr/>

    <div class="display-6">STREAMS </div>

    <hr/>
    <div class="d-flex justify-content-between">
        <div>
            <a class="btn btn-primary btn-lg" asp-controller="FormStreams" asp-action="Create">
                <span class="material-symbols-outlined">
                    add
                </span>
                Create Stream
            </a>
        </div>

        <div>
            <a class="btn btn-primary btn-lg" asp-controller="FormStreams" asp-action="Index">
                <span class="material-symbols-outlined">
                    list
                </span>
                View All Streams
            </a>
        </div>

        <div>
            <a class="btn btn-primary btn-lg" asp-controller="FormStreams" asp-action="ViewSingleStream">
                <span class="material-symbols-outlined">
                    list
                </span>
                View Students Per Stream
            </a>
        </div>


    </div>

    <div class="display-6">STUDENTS </div>

    <hr/>
    <div class="d-flex justify-content-between">
        <div>
            <a class="btn btn-primary btn-lg" asp-controller="Students" asp-action="Create">
                <span class="material-symbols-outlined">
                    add
                </span>
                Add New Student
            </a>
        </div>

        <div>
            <a class="btn btn-primary btn-lg" asp-controller="Students" asp-action="Index">
                <span class="material-symbols-outlined">
                    list
                </span>
                View All Students
            </a>
        </div>
    </div>

</div>


<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"/>

